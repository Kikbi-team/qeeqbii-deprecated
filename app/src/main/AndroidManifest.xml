<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.epfl.sweng.qeeqbii">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />


    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GoogleSignInActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity android:name=".CancerDataShowActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.epfl.sweng.qeeqbii.MainActivity" />
        </activity>
        <activity android:name=".BarcodeScannerActivity" />
        <activity
            android:name=".BarcodeToProductActivity"
            android:exported="true" />
        <activity android:name=".Graphs" />
        <activity
            android:name=".CancerDataQueryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true" />
        <activity android:name=".BaseActivity" />
        <activity android:name=".ShoppingList" />
        <activity
            android:name=".ShoppingCartActivity"
            android:label="@string/title_activity_shopping_cart"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".RecentlyScannedProductsActivity"
            android:exported="true" />
    </application>

</manifest>