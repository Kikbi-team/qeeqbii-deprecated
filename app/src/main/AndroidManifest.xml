<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.epfl.sweng.qeeqbii">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name="ch.epfl.sweng.qeeqbii.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".GoogleSignInActivity"></activity>

        <activity
            android:name="ch.epfl.sweng.qeeqbii.MainActivity"
            android:exported="true"></activity>
        <activity
            android:name="ch.epfl.sweng.qeeqbii.CancerDataShowActivity"
            android:exported="true"
            android:parentActivityName="ch.epfl.sweng.qeeqbii.MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.epfl.sweng.qeeqbii.MainActivity" />
        </activity>
        <activity android:name="ch.epfl.sweng.qeeqbii.BarcodeActivity" />
        <activity
            android:name="ch.epfl.sweng.qeeqbii.BarcodeToProductActivity"
            android:exported="true" />
        <activity android:name="ch.epfl.sweng.qeeqbii.Graphs"></activity>
        <activity
            android:name="ch.epfl.sweng.qeeqbii.CancerDataQueryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:parentActivityName="ch.epfl.sweng.qeeqbii.MainActivity"></activity>
        <activity
            android:name="ch.epfl.sweng.qeeqbii.MainApp"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ch.epfl.sweng.qeeqbii.AddItemShoppingList"
            android:label="@string/title_new"
            android:parentActivityName="ch.epfl.sweng.qeeqbii.MainApp" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.epfl.sweng.qeeqbii.MainApp" />
        </activity>

        <!-- This is my shopping list importer activity -->
        <activity
            android:name="ch.epfl.sweng.qeeqbii.ShoppingListImporter"
            android:label="@string/xml_import"
            android:parentActivityName="ch.epfl.sweng.qeeqbii.MainApp" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.epfl.sweng.qeeqbii.MainApp" />
        </activity>

        <!-- Activity for the configuration screen -->
        <activity
            android:name="ch.epfl.sweng.qeeqbii.vansprefs.UserPreferences"
            android:label="@string/title_new" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <!--
                 <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.vansact.MainApp" />

            -->
        </activity>
        <receiver
            android:name="ch.epfl.sweng.qeeqbii.vansschedule.AlarmeNotificationShoppingList"
            android:exported="false" >
            <intent-filter>
                <action android:name="AlarmeNotificationShoppingList" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
    </application>
</manifest>